{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Aliases */
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "widgets/*": [
        "./src/widgets/*"
      ],
      "app/*": [
        "./src/app/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "store/*": [
        "./src/store/*"
      ],
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}